<%- include('partials/_header') -%>
            <form action="/" method="POST" class="todo-header">
                <input type="text" name="content">
                <button type="submit"><span class="fas fa-plus"></span></button>
            </form>
            <ul class="todo-list">

                <% todoTasks.forEach(data => { %>

                <li class="todo-list-item">
                    <div class="todo-list-item-name"><%= data.content %></div>
                    <a href="/edit/<%= data._id %>" class="edit">
                        <span class="fas fa-edit"></span>
                    </a>
                    <a href="/remove/<%= data._id %>" class="remove">
                        <span class="fas fa-times"></span>
                    </a>
                </li>
                <% }) %>
            </ul>
<%- include('partials/_footer') -%>